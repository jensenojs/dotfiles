#!/usr/bin/env zsh

# vim
alias ni='nvim'
alias vi='vim'
# better than vim $(fzf)
alias nf="fzf --bind 'enter:become(nvim {})'"
alias cf='cd $(find * -type d | fzf)'

alias reprofile='source ~/.zshenv; source ~/.config/zsh/.zshrc'
alias _=sudo

# lazygit
alias lg='lazygit'

# matrixorigin
alias kmo='kill -9 $(pgrep -d',' -f mo-service)'

# thefuck
alias fk="thefuck"

# python setting
alias pip='pip3'
alias python='python3'

# better tools

# color
alias \
    cat='bat'
    diff="diff --color=auto" \
    make="colormake" \
    ping="gping" \
    ip="ip -color=auto" \
    grep="grep --color=auto" \
