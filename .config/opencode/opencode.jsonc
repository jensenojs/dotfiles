{
  "$schema": "https://opencode.ai/config.json",
  // https://gist.github.com/intellectronica/e06c2547a11ffa9520a8fb7e269e8d08
  "mcp": {
    "tavily": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "tavily-mcp"
      ],
      "environment": {
        "TAVILY_API_KEY": "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"
      }
    },
    "mcp-server-firecrawl": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "firecrawl-mcp"
      ],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_KEY": ""
      },
     "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    // https://github.com/oraios/serena
    "serena": {
      "type": "local",
      "command": [
          "uvx",
          "--from",
          "git+https://github.com/oraios/serena",
          "serena-mcp-server"
      ],
      "enabled": false
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp", "--api-key", "YOUR_API_KEY"],
      "enabled": true
    }
  }
}
